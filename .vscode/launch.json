  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Build & Launch Moonbeam Node (Linux)",
      "cargo": {
        "args": ["build", "--bin=moonbeam"],
        "filter": {
          "name": "moonbeam",
          "kind": "bin"
        }
      },
      "args": [
        "--execution=Native",
        "--no-telemetry",
        "--no-prometheus",
        "--dev",
        "--ethapi=txpool,debug,trace",
        "--sealing=manual",
        "-linfo",
        "--port=19931",
        "--rpc-port=19932",
        "--ws-port=19933",
        "--tmp"
      ],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": ["rust"],
      "sourceMap": {
        "/rustc/*": "${env:HOME}/.rustup/toolchains/nightly-2021-01-13-x86_64-unknown-linux-gnu/lib/rustlib/src/rust"
      }
    }
  ]
}
